{
    "manifest_version": 2,

    "name": "AppTailr",
    "description": "Quickly enable/disable selected extensions from the chrome bar.",
    "icons": { "16": "img/icon_16.png",
               "48": "img/icon_48.png",
               "128": "img/icon_128.png"
             },
    "version": "1.0",
    "homepage_url": "https://chrome.google.com/webstore/detail/apomfpjkkcfmidcbdmmafjbakibefoma",
    "options_page": "options.html",

    "browser_action":
    {
        "default_name": "AppTailr",
        "default_icon": "img/icon_128.png",
        "default_popup": "popup.html"
    },

    "permissions":
    [
        "management",
        "storage"
    ]
}
